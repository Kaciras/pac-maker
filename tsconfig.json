{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": [
			"ESNext",
			"DOM", // `fetch` is not in @types/node
		],
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"resolveJsonModule": true,
		"useUnknownInCatchVariables": false,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	}
}
