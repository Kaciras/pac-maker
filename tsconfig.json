{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"resolveJsonModule": true,
		"useUnknownInCatchVariables": false,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,

		// For tests
		"allowImportingTsExtensions": true
	}
}
